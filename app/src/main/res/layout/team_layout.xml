<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutSetuppm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.03"
            android:orientation="horizontal"
            android:padding="0dp" >

            <TextView
                android:id="@+id/textsetuplabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center_horizontal"
                android:minLines="2"
                android:padding="0dp"
                android:text="touch buttons to enter names / select team lineup.   See dropdown menu for more options such as importing downloaded team"
                android:textColor="#ff0000"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/homeTeam"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1.3"
                android:background="@drawable/btn_lime"
                android:gravity="center_vertical|center_horizontal"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:padding="0dp"
                android:text="change team name:"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/homeTeamName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:paddingRight="4dp"
                android:text="OWN TEAM"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_setup_reset"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1.3"
                android:background="@drawable/btn_red"
                android:gravity="center_vertical|center_horizontal"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="reset team selection"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/ButtonP15"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_custom"
                android:includeFontPadding="true"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="15"
                android:textSize="11sp" />

            <Button
                android:id="@+id/ButtonP14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_custom"
                android:includeFontPadding="true"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="14"
                android:textSize="11sp" />

            <Button
                android:id="@+id/ButtonP13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_custom"
                android:includeFontPadding="true"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="13"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/ButtonP12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_custom"
                android:includeFontPadding="true"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="12"
                android:textSize="11sp" />

            <Button
                android:id="@+id/ButtonP11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_custom"
                android:includeFontPadding="true"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="11"
                android:textSize="11sp" />

            <Button
                android:id="@+id/ButtonP10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_custom"
                android:includeFontPadding="true"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="10"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/ButtonP09"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_custom"
                android:includeFontPadding="true"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="9"
                android:textSize="11sp" />

            <Button
                android:id="@+id/ButtonP08"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_custom"
                android:includeFontPadding="true"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="8"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/ButtonP07"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_custom"
                android:includeFontPadding="true"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="7"
                android:textSize="11sp" />

            <Button
                android:id="@+id/ButtonP06"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_custom"
                android:includeFontPadding="true"
                android:padding="0dp"
                android:text="6"
                android:textSize="11sp" />

            <Button
                android:id="@+id/ButtonP05"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_custom"
                android:includeFontPadding="true"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="5"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/ButtonP04"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_custom"
                android:includeFontPadding="true"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="4"
                android:textSize="11sp" />

            <Button
                android:id="@+id/ButtonP03"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_custom"
                android:includeFontPadding="true"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="3"
                android:textSize="11sp" />

            <Button
                android:id="@+id/ButtonP02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_custom"
                android:includeFontPadding="true"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="2"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/ButtonP01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_custom"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="1"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bSub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/btn_yellow"
                android:gravity="center_vertical|center_horizontal"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="make substitution"
                android:textSize="12sp" />

            <Button
                android:id="@+id/bBlood"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/btn_yellow"
                android:gravity="center_vertical|center_horizontal"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="make blood sub"
                android:textSize="11sp" />

            <Button
                android:id="@+id/bViewSubs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/btn_green"
                android:gravity="center_vertical|center_horizontal"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="view subs/cards"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight=".98"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/sel_tweet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/buttond_custom"
                android:gravity="center_vertical|center_horizontal"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="tweet selection"
                android:textSize="11sp" />

            <Button
                android:id="@+id/sel_cards"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight=".97"
                android:background="@drawable/buttond_custom"
                android:gravity="center_vertical|center_horizontal"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="tweet subs/cards"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textSize="11sp" />

            <Button
                android:id="@+id/sel_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/buttond_custom"
                android:gravity="center_vertical|center_horizontal"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="text selection"
                android:textSize="11sp" />

            <Button
                android:id="@+id/sel_share"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/buttond_custom"
                android:gravity="center_vertical|center_horizontal"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="share selection"
                android:textSize="11sp" />

            <Button
                android:id="@+id/bSaveSelection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="2dp"
                android:layout_weight=".93"
                android:background="@drawable/buttond_custom"
                android:gravity="center_vertical|center_horizontal"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="save selection to summary"
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>