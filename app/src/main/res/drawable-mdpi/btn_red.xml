<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#c74848" />
            <stroke
                android:width="1dp"
                android:color="#780f0f" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ed7c7c"
                android:endColor="#c74848"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#780f0f" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>